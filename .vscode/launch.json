{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net9.0/dotnet-testapp",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": ".NET Core Docker Attach",
            "type": "coreclr",
            "request": "attach",
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeArgs": ["exec", "-i", "dotnet-debugging-vscode-debugger-1", "sh", "-c"],
                "debuggerPath": "/vsdbg/vsdbg",
                "pipeCwd": "${workspaceRoot}",
                "quoteArgs": false
            },
            "processId": "${command:pickRemoteProcess}",
            "sourceFileMap": {
                "/app": "${workspaceFolder}"
            },
            "justMyCode": true
        },
        {
            "name": ".NET Core Docker Attach (Cursor)",
            "type": "coreclr",
            "request": "attach",
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeArgs": ["exec", "-i", "dotnet-debugging-cursor-debugger-1", "sh", "-c"],
                "debuggerPath": "/netcoredbg/netcoredbg",
                "debuggerArgs": ["--interpreter=vscode"],
                "pipeCwd": "${workspaceRoot}",
                "quoteArgs": false
            },
            "console": "internalConsole",
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            },            
            "processId": "${command:pickRemoteProcess}",
            "sourceFileMap": {
                "/app": "${workspaceFolder}"
            },
            "justMyCode": true,
            "requireExactSource": false,
            "suppressJITOptimizations": true,
            "debugPort": 5005
        },        
    ]
}